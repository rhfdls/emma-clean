{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://emma.ai/schemas/ActionValidationResult.schema.json",
  "title": "ActionValidationResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision",
    "reason",
    "traceId",
    "tenantId",
    "orgId",
    "aiConfidenceScore",
    "durationMs"
  ],
  "properties": {
    "decision": {
      "type": "string",
      "enum": ["Allow", "Deny", "NeedsApproval"]
    },
    "reason": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "details": { "type": "string" }
      }
    },
    "alternatives": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "description"],
        "properties": {
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "overrideMode": {
      "type": "string",
      "enum": ["AlwaysAsk", "NeverAsk", "LLMDecision", "RiskBased"]
    },
    "userOverrides": {
      "type": "object",
      "description": "Opaque user override payload propagated through validation",
      "additionalProperties": true
    },
    "traceId": { "type": "string", "minLength": 8 },
    "tenantId": { "type": "string", "minLength": 1 },
    "orgId": { "type": "string", "minLength": 1 },
    "modelName": { "type": "string" },
    "modelVersion": { "type": "string" },
    "tokensIn": { "type": "integer", "minimum": 0 },
    "tokensOut": { "type": "integer", "minimum": 0 },
    "totalCostEstimate": { "type": "number", "minimum": 0 },
    "aiConfidenceScore": { "type": "number", "minimum": 0, "maximum": 1 },
    "durationMs": { "type": "integer", "minimum": 0 }
  }
}
