{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://emma.ai/schemas/UserApprovalRequest.schema.json",
  "title": "UserApprovalRequest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "traceId",
    "tenantId",
    "orgId",
    "actionSummary",
    "riskLevel",
    "proposedAction",
    "alternatives"
  ],
  "properties": {
    "traceId": { "type": "string", "minLength": 8 },
    "tenantId": { "type": "string", "minLength": 1 },
    "orgId": { "type": "string", "minLength": 1 },
    "actionSummary": { "type": "string", "minLength": 1 },
    "riskLevel": { "type": "string", "enum": ["Low", "Medium", "High"] },
    "proposedAction": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "parameters"],
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "parameters": { "type": "object", "additionalProperties": true }
      }
    },
    "alternatives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "description"],
        "properties": {
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 }
        }
      }
    },
    "overrideMode": {
      "type": "string",
      "enum": ["AlwaysAsk", "NeverAsk", "LLMDecision", "RiskBased"]
    },
    "userOverrides": {
      "type": "object",
      "description": "Opaque user override payload propagated through validation",
      "additionalProperties": true
    },
    "aiConfidenceScore": { "type": "number", "minimum": 0, "maximum": 1 },
    "durationMs": { "type": "integer", "minimum": 0 }
  }
}
