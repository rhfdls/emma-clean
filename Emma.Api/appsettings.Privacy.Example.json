{
  "IsProduction": false,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Emma.Core.Services": "Debug",
      "Emma.Api.Middleware.PrivacyDebugMiddleware": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Debug": {
    "EnablePrivacyDebugMiddleware": true,
    "PrivilegedAgents": [
      "dev-agent-1-guid-here",
      "dev-agent-2-guid-here"
    ]
  },
  "Jwt": {
    "SecretKey": "your-256-bit-secret-key-for-jwt-signing-must-be-very-long",
    "Issuer": "Emma.Api",
    "Audience": "Emma.Client",
    "ExpirationMinutes": 60
  },
  "Privacy": {
    "AuditRetentionDays": 2555,
    "EnableDataMasking": true,
    "DefaultMaskingLevel": "Standard",
    "ProductionMaskingLevel": "Full"
  },
  "ConnectionStrings": {
    "DefaultConnection": "your-database-connection-string-here"
  }
}
